import React, { useState } from 'react';
import { Dialog, DialogContent, DialogHeader, DialogTitle, DialogDescription } from '@/components/ui/dialog';
import { Button } from '@/components/ui/button';
import { Input } from '@/components/ui/input';
import { Label } from '@/components/ui/label';
import { Loader2 } from 'lucide-react';
import { toast } from 'sonner';

interface LeadGateModalProps {
    isOpen: boolean;
    onOpenChange: (open: boolean) => void;
    onSuccess: () => void;
    lostValue?: number;
}

export const LeadGateModal: React.FC<LeadGateModalProps> = ({ isOpen, onOpenChange, onSuccess, lostValue }) => {
    const [name, setName] = useState('');
    const [whatsapp, setWhatsapp] = useState('');
    const [loading, setLoading] = useState(false);

    const handleSubmit = async (e: React.FormEvent) => {
        e.preventDefault();
        if (!name || !whatsapp) {
            toast.error('Por favor, preencha todos os campos.');
            return;
        }

        setLoading(true);

        try {
            // Send to Notion via API route
            const response = await fetch('/api/lead-gate', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    name,
                    whatsapp,
                    lostValue,
                    timestamp: new Date().toISOString(),
                }),
            });

            if (!response.ok) {
                throw new Error('Falha ao enviar dados');
            }

            toast.success('Acesso liberado com sucesso!');
            onSuccess();
            onOpenChange(false);
        } catch (error) {
            console.error('Erro ao enviar lead:', error);
            // Fallback: still allow access if API fails? Or block?
            // User requirement: "Somente após o clique... os dados... devem ser enviados"
            // Assuming we want to unlock even if notion fails (graceful degradation) or strict?
            // "Somente após o clique nesse botão, o resultado... deve ser revelado"
            // I'll assume we unlock, but warn if error.
            // But for "Premium SaaS", better to pretend success to user if it's a critical conversion.
            toast.error('Erro ao conectar. Tente novamente ou chame no WhatsApp.');
        } finally {
            setLoading(false);
        }
    };

    return (
        <Dialog open={isOpen} onOpenChange={onOpenChange}>
            <DialogContent className="sm:max-w-md">
                <DialogHeader>
                    <DialogTitle className="text-2xl font-bold text-center">
                        Liberar Diagnóstico Financeiro
                    </DialogTitle>
                    <DialogDescription className="text-center">
                        Insira seus dados para acessar o resultado completo da calculadora.
                    </DialogDescription>
                </DialogHeader>

                <form onSubmit={handleSubmit} className="space-y-6 py-4">
                    <div className="space-y-2">
                        <Label htmlFor="name">Nome Completo</Label>
                        <Input
                            id="name"
                            placeholder="Seu nome"
                            value={name}
                            onChange={(e) => setName(e.target.value)}
                            required
                        />
                    </div>
                    <div className="space-y-2">
                        <Label htmlFor="whatsapp">WhatsApp</Label>
                        <Input
                            id="whatsapp"
                            placeholder="(11) 99999-9999"
                            value={whatsapp}
                            onChange={(e) => setWhatsapp(e.target.value)}
                            type="tel"
                            required
                        />
                    </div>

                    <Button
                        type="submit"
                        className="w-full bg-cyan-600 hover:bg-cyan-700 text-white font-semibold h-12 text-lg"
                        disabled={loading}
                    >
                        {loading ? (
                            <>
                                <Loader2 className="mr-2 h-4 w-4 animate-spin" />
                                Liberando...
                            </>
                        ) : (
                            'Liberar meu Diagnóstico Financeiro'
                        )}
                    </Button>

                    <p className="text-xs text-center text-slate-400">
                        Seus dados estão seguros. Não enviamos spam.
                    </p>
                </form>
            </DialogContent>
        </Dialog>
    );
};
